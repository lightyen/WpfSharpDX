<Window x:Class="WpfLovesSharpDX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:sharpdx="clr-namespace:WpfDirectX"
        mc:Ignorable="d"
        Title="MainWindow" Height="481.754" Width="592.09" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ToggleButton Margin="10" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" />
        </Grid>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding Content}" Margin="10,0,10,10"/>
        </Grid>
    </Grid>
